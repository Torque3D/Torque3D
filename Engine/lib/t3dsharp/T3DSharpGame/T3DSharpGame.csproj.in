<Project Sdk="Microsoft.NET.Sdk">
   
   <PropertyGroup>
      <OutputType>Exe</OutputType>
      <TargetFramework>netcoreapp3.1</TargetFramework>
      <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
      <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
      <PublishTrimmed>true</PublishTrimmed>
      <PlatformTarget>x64</PlatformTarget>
      <OutputPath>@projectOutDir@</OutputPath>
   </PropertyGroup>
   
   <PropertyGroup Condition=" '$(Platform)' == 'AnyCPU' "></PropertyGroup>
   
   <ItemGroup>
      <ProjectReference Include="..\T3DSharpFramework\T3DSharpFramework.csproj" />
   </ItemGroup>
   
   <ItemGroup>
      <Compile Include="@libDir@/t3dsharp/T3DSharpGame/**/*.cs" LinkBase="Engine"/>
      <Compile Include="@projectOutDir@/**/*.cs" LinkBase="Game"/>
   </ItemGroup>
   
</Project>
